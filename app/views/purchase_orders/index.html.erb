<h1>Purchase Order</h1>

<% if @purchase_orders %>
  <table class="table table-striped">
    <tr>
      <th>Filter by:</th>
      <th colspan="2">
        <%= link_to "Open", purchase_orders_path(status: 'Open') %>
        <%= link_to "Closed", purchase_orders_path(status: 'Closed') %>
      </th>
    </tr>
    <tr>
      <th>Id</th>
      <th>Raw</th>
      <th>Action</th>
    </tr>

    <% @purchase_orders.each do |po| %>
      <tr>
        <td><%= po['Id'] %></td>
        <td><%= po %></td>
        <td><%= link_to "Show", purchase_order_path(po['Id']) %></td>
      </tr>
    <% end %>
  </table>
<% end %>
